<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.GreenValley.Card" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
    </style>

    <style name="ShapeAppearance.GreenValley.Button.Add" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/button_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/button_corner_radius</item>
    </style>

    <style
        name="ShapeAppearance.GreenValley.FAB"
        parent="ShapeAppearance.MaterialComponents.SmallComponent" />

    <!-- Add plant button -->
    <dimen name="button_corner_radius">12dp</dimen>



    <!--Shape Appearance for small components like chips, buttons, text fields and FABs-->
    <style name="ShapeAppearance.GreenValley.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0px</item>
        <item name="cornerSizeTopLeft">@dimen/small_component_top_left_radius</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.GreenValley.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0px</item>
    </style>

    <!--Shape Appearance for large components like side and bottom navigation drawers-->
    <style name="ShapeAppearance.GreenValley.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0px</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="ShapeAppearance.Owl.MinimizedSheet" parent="ShapeAppearance.GreenValley.MediumComponent">
        <item name="cornerSizeTopLeft">@dimen/minimized_sheet_top_left_radius</item>
    </style>

    <dimen name="small_component_top_left_radius">28dp</dimen>
    <dimen name="minimized_sheet_top_left_radius">48dp</dimen>

</resources>